	<% if flash[:notice] %>
		<p><%= flash[:notice] %>
	<% end %>

<h1>Books</h1>
 <table>
 <!-- テーブルタグ、表を作成する際に使用する -->
 	<thead>
 	<!-- テーブルヘッド -->
 		<tr>
 		<!-- 囲まれている範囲を1行に並べる -->
    		<th>Title</th>
    		<!-- タイトル -->
    		<th>Body</th>
    		<!-- 本文 -->
    		<th colspan="3"></th>
    		<!-- 行の列数(この場合は3つ)を定義する -->
    	</tr>
    </thead>

	<tbody>
	<!-- テーブルボディ -->
		<% @books.each do |book| %>
		<!-- 存在する記事の数だけ処理を繰り返す -->
		<!-- コントローラのindexに"book"という定義は存在しないが、|book|としているので問題なし -->
			<tr>
			<!-- 囲まれている範囲を1行にまとめる -->
				<td><%= book.title %></td>
				<!-- 投稿された記事の"title"を表示する -->
				<td><%= book.body %></td>
				<!-- 投稿された記事の"body"を表示する -->
				<td><%= link_to "Show", book_path(book.id), class:"show_#{book.id}" %></td>
				<!-- 閲覧画面へ遷移するリンク -->
				<td><%= link_to "Edit", edit_book_path(book.id), class:"edit_#{book.id}" %></td>
				<!-- 編集画面へ遷移するリンク -->
				<td><%= link_to "Destroy", book_path(book), method: :delete, class:"destroy_#{book.id}" %></td>
				<!-- 記事を削除する機能 -->
			</tr>
		<% end %>
	</tbody>
</table>

<h1>New book</h1>
<!-- form_for部分 -->
<!-- 新規投稿用入力フォーム -->
<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title, class:"book_title" %>
 
    <h4>Body</h4>
    <%= f.text_area :body,class:"book_body" %>
 
    <%= f.submit "Create book" %>
 
<% end %>