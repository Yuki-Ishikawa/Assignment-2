<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit "Update book" %><br>
	<%= link_to "Show", book_path(@book.id), class:"show_#{@book.id}" %>
	<!-- 引数を"book.id"としてエラー発生、コントローラの"edit"に"book"の記載がなく変数が一致しなかったため -->
	<!-- 引数を"@book.id"に修正し解決("@book"は変数として存在) -->
	<%= link_to "Back", "/books/", class:"back" %>

<% end %>